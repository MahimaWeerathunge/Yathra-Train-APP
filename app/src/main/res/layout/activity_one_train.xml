<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    android:elevation="8dp"
    android:background="#615E5E"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="10dp"
    android:id="@+id/userEntryTrainRow">


    //Timetables
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        //RouteName Display
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            app:cardBackgroundColor="#ccc">

            <TextView
                android:id="@+id/tvTrainNameTT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Train Name"
                android:textAlignment="center"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>

        //Date Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Status : "/>
            <TextView
                android:id="@+id/tvPassengersTT"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Passengers : "/>

        </LinearLayout>

        //Arrive Time Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Train Category : "/>
            <TextView
                android:id="@+id/tvCategoryTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category : "/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            //Update btn
            <androidx.cardview.widget.CardView
                android:id="@+id/CardUpdateRowDisplayTT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/CadetBlue"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Update"
                    android:textAlignment="center"
                    android:textColor="#FFF" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="16dp"
                android:layout_height="10dp"/>

            //Delete btn
            <androidx.cardview.widget.CardView
                android:id="@+id/CardDeleteRowDisplayTT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#E30C14"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>