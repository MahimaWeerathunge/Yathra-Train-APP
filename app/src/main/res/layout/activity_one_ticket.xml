<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    android:padding="8dp"
    android:elevation="8dp"
    android:background="#615E5E"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="10dp"
    android:id="@+id/userEntryTicketRow">


    //Tickets
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        //RouteName Display
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            app:cardBackgroundColor="#ccc">

            <TextView
                android:id="@+id/DateRowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>

        //Time Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Time : "/>
            <TextView
                android:id="@+id/TimeRowTicket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Time : "/>

        </LinearLayout>

        //Class Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Class : "/>
            <TextView
                android:id="@+id/ClassRowTicket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Class : "/>

        </LinearLayout>

        //Start Station Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="From : "/>
            <TextView
                android:id="@+id/FromRowTicket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="From : "/>

        </LinearLayout>

        //Destination Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="To : "/>
            <TextView
                android:id="@+id/ToRowTicket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="To : "/>

        </LinearLayout>

        //Ticket Price Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Price : "/>
            <TextView
                android:id="@+id/PriceRowTicket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Price : "/>

        </LinearLayout>

        //Ticket Name Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            //Update btn
            <androidx.cardview.widget.CardView
                android:id="@+id/CardUpdateRowDisplayTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/CadetBlue"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="16dp"
                android:layout_height="10dp"/>

            //Delete btn
            <androidx.cardview.widget.CardView
                android:id="@+id/CardDeleteRowDisplayTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#E30C14"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>